<%= render "layouts/errors", :object => @chapter %>

<%= form_for @chapter do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :number %><br>
      <%= f.number_field :number %>
    </div>
    <div class="col-md-10">
      <%= f.label :title %><br>
      <%= f.text_field :title, :size=>51 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.label :body %><br>
      <%= f.text_area :body, :rows=>20, :cols=>75 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.submit %>
    </div>
  </div>
<% end %>
